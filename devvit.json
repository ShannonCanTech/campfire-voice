{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "campfire-voice-3",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "redis": true,
  "realtime": true,
  "reddit": {
    "asUser": [
      "SUBMIT_POST",
      "SUBMIT_COMMENT"
    ]
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "campfire-voice-3",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "campfire_voice_3_dev"
  }
}
